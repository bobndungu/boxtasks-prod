# Production Environment Configuration
# Copy to .env.production.local and fill in actual values

# API Configuration
VITE_API_URL=https://api.boxtasks.example.com
VITE_API_BASE_PATH=/jsonapi

# OAuth Configuration
VITE_OAUTH_CLIENT_ID=boxtasks-frontend
VITE_OAUTH_CLIENT_SECRET=CHANGE_THIS_IN_PRODUCTION

# Mercure Real-time Configuration
VITE_MERCURE_URL=https://mercure.boxtasks.example.com/.well-known/mercure
VITE_MERCURE_PUBLIC_URL=https://mercure.boxtasks.example.com/.well-known/mercure

# Application Settings
VITE_APP_NAME=BoxTasks
VITE_APP_DESCRIPTION=Asset Management System

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PWA=true

# Performance
VITE_API_TIMEOUT=30000
VITE_ENABLE_CACHE=true
VITE_CACHE_TTL=300000

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_CSRF=true
