# BoxTasks Environment Configuration Template
# Copy this file to .env and fill in appropriate values

# =============================================================================
# DRUPAL BACKEND CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
DRUPAL_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=boxtasks
DB_USER=boxtasks
DB_PASSWORD=your_secure_password_here

# Security - Generate with: php -r "echo bin2hex(random_bytes(32));"
DRUPAL_HASH_SALT=generate_a_random_64_character_hex_string

# Trusted Hosts (comma-separated regex patterns)
DRUPAL_TRUSTED_HOSTS=^boxtasks\.example\.com$,^www\.boxtasks\.example\.com$

# Base URL (optional, auto-detected if not set)
DRUPAL_BASE_URL=https://boxtasks.example.com

# File Paths
DRUPAL_PRIVATE_FILES=/var/www/private
DRUPAL_TEMP_PATH=/tmp
DRUPAL_CONFIG_SYNC=../config/sync

# HTTPS Configuration
FORCE_HTTPS=true

# Reverse Proxy (if behind load balancer/CDN)
BEHIND_PROXY=false
PROXY_ADDRESSES=

# =============================================================================
# REDIS CACHE (optional)
# =============================================================================

REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# OAUTH CONFIGURATION
# =============================================================================

OAUTH_ACCESS_TOKEN_EXPIRATION=3600
OAUTH_REFRESH_TOKEN_EXPIRATION=1209600

# =============================================================================
# MERCURE REAL-TIME
# =============================================================================

MERCURE_URL=https://mercure.example.com/.well-known/mercure
MERCURE_JWT_SECRET=your_mercure_jwt_secret

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

CORS_ALLOWED_ORIGINS=https://app.boxtasks.example.com

# =============================================================================
# MAINTENANCE
# =============================================================================

DRUPAL_MAINTENANCE=false

# Deployment Identifier (change on each deployment)
DEPLOYMENT_ID=

# =============================================================================
# FRONTEND CONFIGURATION (Vite)
# =============================================================================

# API Endpoints
VITE_API_URL=https://api.boxtasks.example.com
VITE_API_BASE_PATH=/jsonapi

# OAuth
VITE_OAUTH_CLIENT_ID=boxtasks-frontend
VITE_OAUTH_CLIENT_SECRET=your_oauth_client_secret

# Mercure
VITE_MERCURE_URL=https://mercure.example.com/.well-known/mercure

# Features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PWA=true
VITE_ENABLE_CSP=true
VITE_ENABLE_CSRF=true

# Performance
VITE_API_TIMEOUT=30000
VITE_ENABLE_CACHE=true
VITE_CACHE_TTL=300000
